<h2>List of products</h2>

<table class="table table-condensed">
  <thead>
    <tr>
      <th style="width: 20%;">Title</th>
      <th style="width: 70%;">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Show', product %></td>
        <% if can? :update, product%><td><%= link_to 'Edit', edit_product_path(product) %></td> <%end%>
        <% if can? :destroy, product%><td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td><%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, @products%> <%= link_to 'Add New Product', new_product_path %> <%end%>
